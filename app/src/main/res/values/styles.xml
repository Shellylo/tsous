<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTitle" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="ListBookTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/SecondLevelTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/assistant</item>
    </style>

    <style name="ListAuthorName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/assistant</item>
    </style>

    <style name="spinner_choice_label" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogBoxTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/russo_one</item>
    </style>

</resources>
