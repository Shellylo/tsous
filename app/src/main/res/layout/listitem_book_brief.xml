<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookBrief_itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    >

    <TextView
        android:id="@+id/bookBrief_bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/place_holder"
        android:textAppearance="@style/ListBookTitle"
        android:gravity="start"
        />

    <TextView
        android:id="@+id/bookBrief_authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookBrief_bookTitle"
        android:layout_marginTop="-2dp"
        android:text="@string/place_holder"
        android:textAppearance="@style/ListAuthorName"
        android:gravity="start" />

</RelativeLayout>
